{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "types": ["node", "@playwright/test"],

    "include": [
      "src/**/*.ts",
      "tests/**/*.ts",
      "playwright.config.ts"
    ],
    "exclude": [
      "node_modules",
      "artifacts",
      "playwright-report",
      "test-results"
    ],

    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "baseUrl": ".",

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  }
}