{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "types": ["node", "@playwright/test"],

    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "baseUrl": ".",

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "playwright.config.ts",
    "src/ui/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "playwright-report",
    "test-results"
  ]
}