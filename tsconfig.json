{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "strict": true,
    "types": ["node", "@playwright/test"],

    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "baseUrl": ".",

    // 'Pretty' import path
    "paths": {
      "@app-types/*": ["src/types/*"],
      "@pages/*": ["src/ui/pages/*"],
      "@locators/*": ["src/ui/locators/*"],
      "@testdata/*": ["src/testdata/*"],
      "@utils/*": ["src/utils/*"],
      "@ui/*": ["src/ui/*"],
      "@constants/*": ["src/constants/*"],
      "@asserts/*": ["src/api/asserts/*"],
    },

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "playwright.config.ts",
    "src/ui/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "artifacts",
    "playwright-report",
    "test-results"
  ]
}